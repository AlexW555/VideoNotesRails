<div data-controller="video-notes" class="min-h-screen bg-gray-50">
  <div class="mx-auto max-w-5xl px-4 py-10">
    <div class="mb-8">
      <h1 class="text-3xl font-semibold tracking-tight text-gray-900">Video Notes</h1>
      <p class="mt-2 text-gray-600">Take timestamped notes while you watch. Click a note to jump.</p>
    </div>

    <div class="overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-gray-200">
      <div class="p-4 sm:p-6">
        <mux-player
          id="player"
          playback-id="<%= ENV['MUX_PLAYBACK_ID'] %>"
          controls
          class="w-full"
          style="aspect-ratio: 16/9;"
        ></mux-player>
      </div>
    </div>

    <div class="mt-8 grid gap-6 lg:grid-cols-2">
      <div class="rounded-2xl bg-white p-5 shadow-sm ring-1 ring-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Add a note</h2>
        <p class="mt-1 text-sm text-gray-600">Stamp the current time, type, then save.</p>

        <div id="note_form" class="mt-4">
          <%= render "notes/form", note: @note %>
        </div>
      </div>

      <div class="rounded-2xl bg-white p-5 shadow-sm ring-1 ring-gray-200">
        <div class="flex items-baseline justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Notes</h2>
          <span class="text-sm text-gray-500"><%= @notes.size %> total</span>
        </div>

        <ul id="notes" class="mt-4 space-y-3">
          <%= render @notes %>
        </ul>
      </div>
    </div>
  </div>
</div>
